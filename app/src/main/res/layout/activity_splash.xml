<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/eco_green_light"
    android:id="@+id/splash">

    <ImageView
        android:id="@+id/logoPowerHome"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/power_home_logo"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="250dp"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:progressDrawable="@drawable/progressbar_eco_style"
        android:indeterminate="false"/>

    <TextView
        android:id="@+id/poweredByText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="Powered by Florian, Reginald and Anthony"
        android:textColor="@color/black"
        android:textSize="14sp" />
</LinearLayout>