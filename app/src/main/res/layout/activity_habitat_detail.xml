<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/eco_green_light"
    tools:context=".HabitatDetailActivity">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/eco_green_dark"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_weight="0"
            android:onClick="clickRetour"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Informations"
            android:textColor="@color/eco_beige"
            android:textSize="18sp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/habitat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/eco_green_dark"
        android:textSize="16sp"
        >
    </TextView>
    <TextView
        android:id="@+id/resident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/eco_green_dark"
        android:textSize="16sp"
        >
    </TextView>
    <TextView
        android:id="@+id/conso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/eco_green_dark"
        android:textSize="16sp"
        >
    </TextView>
    <TextView
        android:id="@+id/appliances"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/eco_green_dark"
        android:textSize="16sp">
    </TextView>

</LinearLayout>